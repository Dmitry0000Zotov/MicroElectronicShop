@model MicroElectronic.Domain.ViewModels.User.UserViewModel
@{
}

<form asp-action="DeleteUser" enctype="multipart/form-data" id="formDeleteUser" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="mb-3">
        <h5>Вы действительно хотите удалить данного пользователя?</h5>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Name" class="col-form-label">Имя: <b>@Model.Name</b></label>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Surname" class="col-form-label">Имя: <b>@Model.Surname</b></label>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Position" class="col-form-label">Должность: <b>@Model.Position</b></label>
    </div>
    <div class="alert alert-warning mb-3" role="alert">
        Внимание! Данное действие <b>невозможно отменить</b>. Убедитесь в правильности решения.
    </div>


    <div class="row">
        <div class="col text-start">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
        </div>
        <div class="col text-end">
            <input type="submit" class="btn btn-danger" value="Удалить" />
        </div>
    </div>
</form>
