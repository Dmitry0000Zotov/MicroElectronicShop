@model MicroElectronic.Domain.ViewModels.Equipment.EquipmentViewModel
@{
}

<head>
    <link rel="stylesheet" href="~/css/equipments.css" asp-append-version="true" />
</head>
<div class="container mt-5 text-start">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title m-2 mb-5">@Model.Name - @Model.Description</h3>
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2">
                <div class="col col-lg-4 col-xl-4 text-center equip-image">
                    <img class="img-fluid" src="@Model.ImageUrl"/>
                </div>
                <div class="col col-lg-8 col-xl-8 text-center">
                    <h3 class="card-title m-2 mb-4">Характеристики</h3>
                    <table class="table fs-6 mb-5">
                        <tbody>
                            <tr>
                                <td class="text-start">Габариты</td>
                                <td class="text-end">@Model.Size</td>
                            </tr>
                            <tr>
                                <td class="text-start">Материал корпуса</td>
                                <td class="text-end">@Model.BodyMaterial</td>
                            </tr>
                            <tr>
                                <td class="text-start">Рабочая область</td>
                                <td class="text-end">@Model.WorkingArea</td>
                            </tr>
                            <tr>
                                <td class="text-start">Электропитание</td>
                                <td class="text-end">@Model.Power</td>
                            </tr>
                            <tr>
                                <td class="text-start">Гарантийный срок</td>
                                <td class="text-end">@Model.GuaranteePeriod</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col text-start">
                            <p class="fs-4 ms-2">Стоимость:</p> 
                        </div>
                        <div class="col text-end me-2">
                            <p class="fs-4">&#8381 @Model.Price</p>
                            <button class="btn btn-outline-dark"data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Добавить в заявку" 
                              onclick="addToApp({'equipId':@Model.Id,'userId':@User.FindFirst("Id").Value})">Добавить в заявку</button>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="card-title m-2 mb-4 mt-4">Описание</h3>
            <p class="m-2 fs-5">@Model.FullDescription</p>
        </div>
    </div>
</div>

<script src="~/js/addToApplication.js" asp-append-version="true"></script>